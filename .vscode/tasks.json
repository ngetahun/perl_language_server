{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test current file",
            "type": "shell",
            "command": "prove ${relativeFile}",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run test suite",
            "type": "shell",
            "command": "prove --version; prove ${workspaceDir}/t",
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}